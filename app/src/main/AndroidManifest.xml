<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ard.agrocampo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AgroCampo">
        <activity android:name=".Activitys.GestionActivity"></activity>
        <activity
            android:name=".Activitys.NewProjects"
            android:windowSoftInputMode="adjustNothing"></activity>
        <activity android:name=".AsistenteVirtual" />
        <activity android:name=".Noticias" />
        <activity android:name=".RegistrarCorreo" />
        <activity
            android:name=".CreacionProyecto"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".Activitys.Inicio"
            android:label="@string/title_activity_inicio"
            android:theme="@style/Theme.AgroCampo.NoActionBar" />
        <activity android:name=".Activitys.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>